{
  "name": "mock-typed",
  "version": "0.0.1",
  "description": "A tiny TypeScript library for type-safe function mocks in unit tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn tsc -b",
    "prepack": "yarn clean && yarn build",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "jest",
    "unit",
    "test",
    "mock",
    "function",
    "safe",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/milichev/mock-typed.git",
    "directory": "packages/mock-typed"
  },
  "author": {
    "name": "Vadym Milichev",
    "email": "vadim.milichev@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^2",
    "@types/jest": "^29.5.13",
    "eslint": "^8.45.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "peerDependencies": {
    "jest": "^29.7.0"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
