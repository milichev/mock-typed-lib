{
  "name": "mock-typed",
  "version": "0.0.9",
  "description": "A tiny TypeScript library for type-safe function mocks in unit tests",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "dist/index.d.ts": [
        "dist/index.d.mts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist package.tgz tsconfig.tsbuildinfo",
    "build": "tsup --dts --tsconfig tsconfig.tsup.json",
    "build_": "tsc -b",
    "build:cjs": "tsc -b tsconfig.cjs.json",
    "build:types": "tsc -b tsconfig.types.json",
    "prepack": "pnpm run clean && pnpm run build",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest"
  },
  "keywords": [
    "jest",
    "unit",
    "test",
    "mock",
    "function",
    "safe",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/milichev/mock-typed-lib.git",
    "directory": "packages/mock-typed"
  },
  "author": {
    "name": "Vadym Milichev",
    "email": "vadim.milichev@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "eslint": "^9.14.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "jest": "^29.7.0"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
